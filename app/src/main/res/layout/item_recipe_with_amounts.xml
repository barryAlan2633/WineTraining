<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="118dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_recipe_item_recipe_with_amounts"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:contentDescription="@string/RecipeImage"
            android:src="@drawable/ic_error_outline_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_name_item_recipe_with_amounts"
            style="@style/Title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_recipe_item_recipe_with_amounts"
            tools:text="Spaghetti" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_unit_item_recipe_with_amounts"
            style="@style/Text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_recipe_amount_item_recipe_with_amounts"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_name_item_recipe_with_amounts"
            tools:text="5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_amount_item_recipe_with_amounts"
            style="@style/Text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_recipe_unit_item_recipe_with_amounts"
            app:layout_constraintTop_toTopOf="@+id/tv_recipe_unit_item_recipe_with_amounts"
            tools:text="pounds" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recipe_calories_item_recipe_with_amounts"
            style="@style/Text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_amount_item_recipe_with_amounts"
            tools:text="50 calories" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
