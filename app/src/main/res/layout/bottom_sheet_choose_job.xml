<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_choose_job"
        style="@style/Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Welcome Alan," />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_manager_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minEms="10"
        android:text="Manager"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_server_choose_job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_choose_job"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_server_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Server"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_hostess_choose_job"
        app:layout_constraintEnd_toEndOf="@+id/btn_manager_choose_job"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_manager_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_manager_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_hostess_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Hostess"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_food_runner_choose_job"
        app:layout_constraintEnd_toEndOf="@+id/btn_server_choose_job"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_server_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_server_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_food_runner_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Food Runner"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_bar_tender_choose_job"
        app:layout_constraintEnd_toEndOf="@+id/btn_hostess_choose_job"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_hostess_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_hostess_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dish_washer_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Dish Washer"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_food_runner_choose_job"
        app:layout_constraintStart_toStartOf="@+id/btn_food_runner_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_food_runner_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bar_tender_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Bartender"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/btn_dish_washer_choose_job"
        app:layout_constraintEnd_toEndOf="@+id/btn_dish_washer_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_dish_washer_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cook_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Cook"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_bar_tender_choose_job"
        app:layout_constraintStart_toStartOf="@+id/btn_bar_tender_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_bar_tender_choose_job"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_busser_choose_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="10"
        android:text="Busser"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_cook_choose_job"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_cook_choose_job"
        app:layout_constraintTop_toBottomOf="@+id/btn_cook_choose_job"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>