<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_name_new_employee"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name_new_employee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Employee Name" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_clock_in_id_new_employee"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_name_new_employee">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_clock_in_id_new_employee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Employee Clock In ID"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5_new_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Employee's Job's:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_clock_in_id_new_employee" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5_new_employee">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manager_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Manager"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_server_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Server"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hostess_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Hostess"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cook_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Cook"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_busser_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Busser"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dish_washer_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Dish Washer"
            app:backgroundTint="@null" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_food_runner_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Food Runner"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bar_tender_new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/background_select_menu_item"
            android:padding="8dp"
            android:text="Bar Tender"
            app:backgroundTint="@null" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>