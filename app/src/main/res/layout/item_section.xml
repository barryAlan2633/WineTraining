<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_selected_section"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView6_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Section Number:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_section_color_item_section"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6_item_section"
            app:layout_constraintStart_toStartOf="@+id/textView6_item_section"
            app:layout_constraintTop_toBottomOf="@+id/tv_section_number_item_section" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_section_number_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/textView6_item_section"
            app:layout_constraintStart_toStartOf="@+id/textView6_item_section"
            app:layout_constraintTop_toBottomOf="@+id/textView6_item_section"
            tools:text="1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView8_item_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tables in this section:"
            app:layout_constraintEnd_toEndOf="@+id/tv_section_color_item_section"
            app:layout_constraintStart_toStartOf="@+id/tv_section_color_item_section"
            app:layout_constraintTop_toBottomOf="@+id/tv_section_color_item_section" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_assigned_tables_item_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/textView8_item_section"
            app:layout_constraintStart_toStartOf="@+id/textView8_item_section"
            app:layout_constraintTop_toBottomOf="@+id/textView8_item_section"
            tools:text="..." />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
