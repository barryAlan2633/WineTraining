<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_item_floor"
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gloria's 1" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_floor_item_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Floor Info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_item_floor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_arrange_tables_item_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrange Tables"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_edit_floor_item_floor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_section_editor_item_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Sections"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_arrange_tables_item_floor" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>