<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_lyt_item_employee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <com.google.android.material.textview.MaterialTextView
            style="@style/Title3"
            android:id="@+id/tv_name_item_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Juanito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_clock_in_id_item_employee"
            style="@style/Text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="2633"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_name_item_employee"
            app:layout_constraintStart_toEndOf="@+id/tv_name_item_employee" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView4_item_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Jobs:"
            app:layout_constraintStart_toStartOf="@+id/tv_name_item_employee"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_item_employee" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_jobs_item_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:gravity="start"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4_item_employee"
            app:layout_constraintTop_toBottomOf="@+id/textView4_item_employee"
            tools:text="Food Runner" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
